#!/usr/bin/env bash
# version: 1.0.0

project_name="$1"

if [ -z "${project_name}" ]; then
  echo "Usage: `basename $0` PROJECT_NAME [FILES_PATTERN] [ADDITIONAL_VARIABLES]"
  echo "example: `basename $0` project '/tmp/*.yml' '{\"A\":\"B\"}'"

  exit 1
fi

files_pattern="$2"
additional_variables="$3"

contents=$(yq e '.trigger-project.trigger.project = "'${project_name}'"' -n)

for f in ${files_pattern}; do
  key="FILE_CONTENT_$(basename "${f}" | tr '-' '_' | tr '.' '_' | tr '[:lower:]' '[:upper:]')_BASE64"
  file_content_base64=$(cat "${f}" | base64 -w 0)

  if [ ${#file_content_base64} -ge 9999 ]; then
    echo "Error: '${f}' [${key}] files is too big. (max: 9999, current: ${#file_content_base64})" >&2
    exit 1
  fi

  contents=$(echo "$contents" | yq e '.trigger-project.variables += {"'${key}'":"'${file_content_base64}'"}')
done

for v in ${additional_variables}; do
  contents=$(echo "$contents" | yq e '.trigger-project.variables += '${v})
done

echo "$contents"